<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:background="#e7641e"
    xmlns:tool="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e7641e">

        <ImageView
            android:id="@+id/saved_food_image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/food_image_view"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/food_button"

            android:padding="2dp">

            <TextView
                android:id="@+id/saved_food_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tool:text="@string/app_name"
                android:textSize="15sp"
                android:textColor="#000000"/>

        </LinearLayout>

        <Button
            android:id="@+id/saved_food_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/food_image_view"
            android:text="SAVE"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>